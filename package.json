{
  "name": "react-viz",
  "version": "0.0.1",
  "description": "Composable visual components for handling data",
  "main": "dist",
  "files": [
    "es",
    "lib",
    "umd"
  ],
  "dependencies": {
    "d3-array": "^2",
    "d3-dsv": "^1",
    "d3-ease": "^1",
    "d3-scale": "^3",
    "d3-shape": "^1.3.5",
    "lodash": "^4",
    "prop-types": "^15",
    "react-sortable-hoc": "^1.10.1",
    "react-virtualized-auto-sizer": "^1.0.2"
  },
  "peerDependencies": {
    "react": "^16",
    "react-dom": "^16",
    "react-redux": "^5",
    "redux": "^4"
  },
  "scripts": {
    "build": "rm -fr dist && babel src --out-dir dist --source-maps inline",
    "deploy": "storybook-to-ghpages",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 9001"
  },
  "keywords": [
    "react",
    "ui",
    "components"
  ],
  "devDependencies": {
    "@babel/cli": "^7",
    "@babel/core": "^7",
    "@babel/preset-env": "^7",
    "@babel/preset-react": "^7",
    "@storybook/addon-a11y": "^5",
    "@storybook/addon-actions": "^5",
    "@storybook/addon-info": "^5",
    "@storybook/addon-options": "^5",
    "@storybook/addon-storyshots": "^5",
    "@storybook/react": "^5",
    "@storybook/storybook-deployer": "^2",
    "@storybook/theming": "^5",
    "babel-loader": "^8",
    "eslint": "^5",
    "eslint-config-airbnb": "^17",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-react": "^7",
    "prettier": "^1",
    "react": "^16",
    "react-dom": "^16",
    "react-redux": "^5",
    "redux": "^4",
    "styled-components": "^4.3.2"
  },
  "esLintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "extends": "airbnb",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018
    },
    "plugins": [
      "react"
    ],
    "rules": {}
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
